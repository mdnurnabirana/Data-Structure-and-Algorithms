{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": ["${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "dependsOn": "Build C++",
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
